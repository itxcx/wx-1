.page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.block {
    height: 47px;
    background-color: #f6f5f4;
}

.container {
  margin: 0;
  padding: 0;
  font-size: 15px;
  color: #434141;
}

.inner {
    padding-left: 30rpx;
}

.tab {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  width: 100%;
  height: 47px;
  line-height: 47px;
  background-color: #fff;
  z-index: 10;
}

.tab:after {
    content: "";
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    top: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #eeebeb;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    -webkit-transform-origin: 0% 0%;
    transform-origin: 0% 0%;
}

.tab-item {
    position: relative;
  flex: 1;
  font-size: 15px;
  text-align: center;
  color: #a9a9b2;
  border-bottom: 4rpx solid transparent;
  overflow: hidden;
  z-index: 11;
}

.tab-item.active {
  color: #c01e2f;
  font-weight: bold;
  border-bottom-color: #c01e2f;
}

.list-item {
  display: flex;
  height: 119rpx;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1rpx solid #eeebeb;
  overflow: hidden;
}

.line {
    height: 8rpx;
    background-color: #f6f5f4;
}

.text {
  position: relative;
  flex: 1;
  margin-right: 42rpx;
}

.title {
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  width: 100%;
  line-height: 1.2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.text-bottom {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 12px;
}

.comments {
  margin-right: 28rpx;
  color: #a9a9b2;
}

.top {
  color: #fe4b64;
}

.news-pic {
  width: 159rpx;
  height: 120rpx;
  border-radius: 4px;
  overflow: hidden
}
